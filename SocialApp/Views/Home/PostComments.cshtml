@model List<SocialApp.DB.ViewModel.CommentsVM>


<ul class="list-group">
    @foreach (var item in Model)
    {
        <li class="list-group-item">
            <img src="@Url.Content(item.CommentByProfilePicPath)" class="img-thumbnail" width="50" alt="Alternate Text" />
             @item.Text
        </li>
    }
    @if (Model.Count == 0)
    {
        <li class="list-group-item">No comments found.</li>
    }
</ul>