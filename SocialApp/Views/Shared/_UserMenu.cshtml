@{
    SocialApp.DB.ViewModel.ProfileViewModel layoutModel = ViewBag.LayoutModel;
}
<div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Social App", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Wall", "Wall", "Home")</li>
                <li>@Html.ActionLink("Messages", "Conversation", "Home")</li>
                <li>@Html.ActionLink("Profile", "Contact", "Home")</li>
            </ul>
            <ul class="nav navbar-nav navbar-left">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="glyphicon glyphicon-user"></i>
                        <span class="badge" id="badgeFriendRequests">0</span>
                    </a>
                    <ul class="dropdown-menu" id="ulFriendRequests">
                       <li><a href="">No pending friend requests. </a></li>
                    </ul>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-left">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="glyphicon glyphicon-bell"></i>
                        <span class="badge">@layoutModel.Notifications.Where(w => w.Active == true).Count()</span>
                    </a>
                    <ul class="dropdown-menu">
                        @foreach (var item in layoutModel.Notifications)
                        {

                            <li><a href="@item.Link">@item.Description</a></li>

                        }
                        @if (layoutModel.Notifications.Count == 0)
                        {

                            <li><a href="">No notifications. </a></li>

                        }
                    </ul>
                </li>
            </ul>
            <form class="navbar-form navbar-left">
                <div class="form-group">
                    <input type="text" id="userSearchBox" class="form-control" placeholder="Search">
                </div>
            </form>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
